{
  "expo": {
    "name": "Inspection System",
    "slug": "inspection-system",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "inspection",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1677ff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.inspection.system",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to take photos of equipment during inspections.",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to record voice notes during inspections.",
        "NSLocationWhenInUseUsageDescription": "Allow $(PRODUCT_NAME) to access your location for inspection site mapping."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1677ff"
      },
      "package": "com.inspection.system",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "plugins": [
      "expo-secure-store",
      "expo-image-picker",
      "expo-notifications",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location for inspection site mapping."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone for voice notes."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b78ac7ad-3b66-40ee-a122-411dd0d9afe0"
      }
    },
    "owner": "akaa",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/b78ac7ad-3b66-40ee-a122-411dd0d9afe0",
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0
    }
  }
}
