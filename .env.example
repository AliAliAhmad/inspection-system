# Flask
FLASK_ENV=production
SECRET_KEY=change-me-to-a-random-string
JWT_SECRET_KEY=change-me-to-a-random-string

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://inspection:inspection@localhost:5432/inspection

# Redis (for rate limiting in production)
REDIS_URL=redis://localhost:6379/0

# File uploads
UPLOAD_FOLDER=instance/uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=instance/logs/app.log

# Gunicorn
GUNICORN_BIND=0.0.0.0:5000
GUNICORN_WORKERS=4
GUNICORN_THREADS=4

# CORS (comma-separated allowed origins, or * for all)
CORS_ORIGINS=https://yourdomain.com

# Server port (dev mode)
PORT=5001

# OpenAI (for auto-translation English â†’ Arabic)
OPENAI_API_KEY=your-openai-api-key
OPENAI_TRANSLATE_MODEL=gpt-4o-mini
